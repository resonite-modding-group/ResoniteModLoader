			<Private>False</Private>
		</Reference>

	</ItemGroup>

	<ItemGroup>
		<Using Remove="System.Net.Http" />
	</ItemGroup>
	
	<Target Name="PostBuild" AfterTargets="PostBuildEvent" Condition="'$(CopyToLibraries)'=='true'">
		<Copy SourceFiles="$(TargetPath)" DestinationFolder="$(ResonitePath)Libraries" />
		<Message Text="Copied $(TargetFileName) to $(ResonitePath)Libraries" Importance="high" />
	</Target>
</Project>
